<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityCoffeeHome"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--        <androidx.cardview.widget.CardView-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            app:cardElevation="5dp"-->
            <!--            app:cardCornerRadius="0dp"-->
            <!--            app:cardBackgroundColor="@color/Black">-->

            <!--            <include layout="@layout/toolbar"/>-->
            <!--        </androidx.cardview.widget.CardView>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="29dp"
                android:layout_marginLeft="29dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/coffeelogo"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="26dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lake View Coffee"
                        android:textSize="18.7sp"
                        android:textColor="@color/Black"
                        android:fontFamily="@font/sf_pro_display_medium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="369 Street, Bogor. Jawa Barat, Indonesia"
                        android:textColor="#393939"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:textSize="10.7sp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_group_7"
                    android:layout_gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="9">



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="0dp"
                    app:cardBackgroundColor="@color/White">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/White"
                        android:text="Menu"
                        android:gravity="center"
                        android:background="@color/palete1"
                        android:fontFamily="@font/sf_pro_display_bold"
                        android:padding="13dp"/>

                </androidx.cardview.widget.CardView>

                <GridLayout
                    android:id="@+id/mainGrid"
                    android:rowCount="2"
                    android:columnCount="3"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false"
                    android:layout_weight="9"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="10dp">
                    <androidx.cardview.widget.CardView
                        android:onClick="pindah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="24dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/White"
                        >

                        <LinearLayout
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="8dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/ic_coffee_affogato"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="-10dp"/>
                            <TextView
                                android:textAlignment="center"
                                android:text="Cappuccino"
                                android:textColor="@color/Black"
                                android:textSize="12sp"
                                android:fontFamily="@font/sf_pro_display_regular"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:onClick="pindah2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="18dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/White"
                        >


                        <LinearLayout
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="8dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/ic_coffee_espresso"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="-10dp"/>
                            <TextView
                                android:textAlignment="center"
                                android:text="Espresso"
                                android:textColor="@color/Black"
                                android:textSize="12sp"
                                android:fontFamily="@font/sf_pro_display_regular"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:onClick="pindah3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="16dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/White"
                        >


                        <LinearLayout
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="8dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/ic_coffee_macchiato"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="-10dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sf_pro_display_regular"
                                android:text="Macchiato"
                                android:textAlignment="center"
                                android:textColor="@color/Black"
                                android:textSize="12sp" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:onClick="pindah4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="24dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/White"
                        >


                        <LinearLayout
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="8dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/ic_coffee_mocha"
                                android:layout_width="60dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="-10dp"/>
                            <TextView
                                android:textAlignment="center"
                                android:text="Mocha"
                                android:textColor="@color/Black"
                                android:textSize="12sp"
                                android:fontFamily="@font/sf_pro_display_regular"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:onClick="pindah5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="18dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/White"
                        >


                        <LinearLayout
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="8dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/ic_coffee_ristretto"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="-10dp"/>
                            <TextView
                                android:textAlignment="center"
                                android:text="Ristretto"
                                android:textColor="@color/Black"
                                android:textSize="12sp"
                                android:fontFamily="@font/sf_pro_display_regular"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:onClick="pindah6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="16dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/White"
                        >


                        <LinearLayout
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="8dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/ic_coffee_cafe_latte"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="-10dp"/>
                            <TextView
                                android:textAlignment="center"
                                android:text="Café Latte"
                                android:textColor="@color/Black"
                                android:textSize="12sp"
                                android:fontFamily="@font/sf_pro_display_regular"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:onClick="pindah7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:layout_columnWeight="1"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="24dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/White"
                        >


                        <LinearLayout
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="8dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/ic_coffee_espresso"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="-10dp"/>
                            <TextView
                                android:textAlignment="center"
                                android:text="Americano"
                                android:textColor="@color/Black"
                                android:textSize="12sp"
                                android:fontFamily="@font/sf_pro_display_regular"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:onClick="pindah8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_columnWeight="1"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="18dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/White"
                        >


                        <LinearLayout
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="8dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/ic_coffee_affogato"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="-10dp"/>
                            <TextView
                                android:textAlignment="center"
                                android:text="Mocha Late"
                                android:textColor="@color/Black"
                                android:textSize="12sp"
                                android:fontFamily="@font/sf_pro_display_regular"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:onClick="pindah9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="16dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/White"
                        >


                        <LinearLayout
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="8dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/ic_coffee_mocha"
                                android:layout_width="60dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="-10dp"/>
                            <TextView
                                android:textAlignment="center"
                                android:text="Affogato Late"
                                android:textColor="@color/Black"
                                android:textSize="12sp"
                                android:fontFamily="@font/sf_pro_display_regular"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>
            </LinearLayout>
        </LinearLayout>


        <Button
            android:onClick="pindahkeorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/palete1"
            android:textColor="@color/White"
            android:text="BOOK ORDER"
            android:layout_marginLeft="13.3dp"
            android:layout_marginRight="13.3dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:layout_alignParentBottom="true"/>


    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/activity_coffeenav_header"
        android:id="@+id/nv">

    </com.google.android.material.navigation.NavigationView>



</androidx.drawerlayout.widget.DrawerLayout>
