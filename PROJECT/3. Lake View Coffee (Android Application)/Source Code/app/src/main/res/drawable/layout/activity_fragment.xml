<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/id"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dp"
        android:padding="3dp"
        android:visibility="visible" />
    <TextView
        android:id="@+id/nomeja"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/id"
        android:maxLines="1"
        android:padding="3dp"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cappuccino"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nomeja"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/id"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        />
    <TextView
        android:id="@+id/espresso"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cappuccino"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/id"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        />
    <TextView
        android:id="@+id/macchiato"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/espresso"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/id"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        />
    <TextView
        android:id="@+id/mocha"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/macchiato"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/id"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        />
    <TextView
        android:id="@+id/ristretto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mocha"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/id"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        />
    <TextView
        android:id="@+id/cafe_latte"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ristretto"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/id"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        />
    <TextView
        android:id="@+id/americano"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cafe_latte"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/id"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        />
    <TextView
        android:id="@+id/mocha_late"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/americano"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/id"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        />
    <TextView
        android:id="@+id/affogato_late"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mocha_late"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/id"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        />
    <TextView
        android:id="@+id/total"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/affogato_late"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/id"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        />
    <TextView
        android:id="@+id/tanggal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/total"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/id"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        />
    <TextView
        android:id="@+id/jam"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/jam"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/id"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        />
</RelativeLayout>
